@model MobilyaProje.Models.Video
@{
    ViewBag.Title = "AdmVideoGetr";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}




<h3>Video Sayfasını Güncelle</h3>

@using (Html.BeginForm("AdmVideoGuncelle", "KPanel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{


    <div>
        @Html.TextBoxFor(x => x.Resim, new { @class = "form-control" })

    </div>
    <div>
        @Html.TextAreaFor(x => x.Media, 3, 0, new { @class = "form-control" })
    </div>
    @Html.HiddenFor(k=>k.id)
    <div>
        <button class="button border with-icon">Değişiklikleri Kaydet</button>
        <br />
        <br />
    </div>


}

