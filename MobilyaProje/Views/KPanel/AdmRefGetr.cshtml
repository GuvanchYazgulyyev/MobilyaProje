@model MobilyaProje.Models.Referans
@{
    ViewBag.Title = "AdmRefGetr";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3>Referanslar Sayfasını Güncelle</h3>

@using (Html.BeginForm("AdmRefGuncelle", "KPanel", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <div id="div-boyut">
        <div>
            <label><b>Resim</b></label>
            <input type="file" id="File" name="File" accept=".jpg,.JPG,.PNG,.png,.jpeg,.JPEG" class="form-control" />
        </div>


        <div>
            @Html.HiddenFor(x => x.id)
        </div>
        <div>
            <button class="button border with-icon">Değişiklikleri Kaydet</button>
            <br />
            <br />
        </div>
    </div>

}

