@using MobilyaProje.Models
@model List<MusteriYorum> 
@{
    ViewBag.Title = "AdmMutMusYorum";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="width:100%" ; class="col-md-12 table table-hover">
    <h3>Yorumlar</h3>
    <table class="table table-bordered">
        <tr>
            <th>Ad Soyad</th>
            <th>Yorum</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.AdSoyad</td>
                <td>@x.Yorum</td>
                <td><a href="~/KPanel/AdmMutMusSil/@x.id" onclick="return confirm('Bunu Silmek İstediginizden Emin misin?  @x.AdSoyad ')" class="button border with-icon" style="background-color:#ff0000; color:#fff">Sil</a></td>
                <td><a href="~/KPanel/AdmMutMusGetr/@x.id" class="button border with-icon">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/KPanel/AdmMutMusEkle/" class="button border with-icon">Yeni Yorum Ekle</a>

</div>

