@using MobilyaProje.Models
@model List<Hizmetler>
@{
    ViewBag.Title = "AdmHizmetler";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="width:100%" ; class="col-md-12 table table-hover">
    <h3>Hizmetler</h3>
    <table class="table table-bordered">
        <tr>
            <th>Başlık</th>
            <th>Slogan</th>
            <th>Resim</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Baslik</td>
                <td>@x.Slogan</td>
                <td><img src="@x.Resim" width="90px;" alt="Alternate Text" /></td>
                <td><a href="~/KPanel/AdmHizmetlerSil/@x.id" onclick="return confirm('Bunu Silmek İstediginizden Emin misin? @x.Baslik ')" class="button border with-icon" style="background-color:#ff0000; color:#fff">Sil</a></td>
                <td><a href="~/KPanel/AdmHizmetlerGetir/@x.id" class="button border with-icon">(Detay)</a></td>
            </tr>
        }
    </table>
    <a href="/KPanel/AdmHizmetlerEkle/" class="button border with-icon">Yeni Hizmet Ekle</a>

</div>
