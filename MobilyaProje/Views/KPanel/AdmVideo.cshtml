@using MobilyaProje.Models
@model List<Video>
@{
    ViewBag.Title = "AdmVideo";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}



<div class="row">
    <div class="col-md-12">
        <div class="notification success closeable margin-bottom-30">
            <h4>Video Eklemek için Video Linkini (URL) Giriniz!!!</h4>
            <a class="close" href="#"></a>
        </div>
    </div>
</div>


<div style="width:100%" ; class="col-md-12 table table-hover">

    <table class="table table-bordered">
        <tr>
            <th>#</th>
            <th>Vide Başlık</th>
            <th>Vide Link Uzantısı</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.id</td>
                <td>@x.Resim</td>
                <td>@x.Media</td>
                <td><a href="~/KPanel/AdmVideoSil/@x.id" onclick="return confirm('Bunu Silmek İstediginizden Emin misin? @x.Resim')" class="button border with-icon" style="background-color:#ff0000; color:#fff">Sil</a></td>

                <td><a href="~/KPanel/AdmVideoGetr/@x.id" class="button border with-icon">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/KPanel/AdmVideoEkle/" class="button border with-icon">Yeni Video Ekle</a>

</div>
