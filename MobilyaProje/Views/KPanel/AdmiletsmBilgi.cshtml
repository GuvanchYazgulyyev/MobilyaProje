@using MobilyaProje.Models
@model List<iletisim>
@{
    ViewBag.Title = "AdmiletsmBilgi";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="width:100%" ; class="col-md-12 table table-hover">
    <h3>İletişim Bilgileri</h3>
    <table class="table table-bordered">
        <tr>
            <th>Adres</th>
            <th>E Posta</th>
            <th>Tel No:</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Adres</td>
                <td>@x.Eposta</td>
                <td>@x.Telefon</td>
                @*<td>@x.Resim</td>*@
