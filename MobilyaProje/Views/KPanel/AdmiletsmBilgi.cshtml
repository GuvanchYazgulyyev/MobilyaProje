                <td><a href="~/KPanel/AdmiltGetr/@x.id" class="button border with-icon">Güncelle (Detaylı Gör)</a></td>
            </tr>
        }
    </table>
    <br />
    @*<a href="~/KPanel/iletisimBilgiEkle" class="button border with-icon">İletisşim Bilgi Ekle</a>*@
