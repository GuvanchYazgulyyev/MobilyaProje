@using MobilyaProje.Models
@model List<NeYapiyoruz>  
@{
    ViewBag.Title = "AdmNeYapiyoruz";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="width:100%" ; class="col-md-12 table table-hover">
    <h3>Hizmetler Kısmı</h3>
    <table class="table table-bordered">
        <tr>
            <th>Başlık</th>
            @*<th>Alt Başlık</th>*@
            <th>Resim</th>
            <th>Resim2</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.Baslik</td>
                @*<td>@x.Baslik1</td>*@
                <td><img src="@x.Resim" width="100px;" alt="Alternate Text" /></td>
                <td><img src="@x.Resim1" width="100px;" alt="Alternate Text" /></td>
                <td><a href="~/KPanel/AdmNeYapiyoruzSil/@x.id" onclick="return confirm('Bunu Silmek İstediginizden Emin misin?  @x.Baslik ')" class="button border with-icon" style="background-color:#ff0000; color:#fff">Sil</a></td>
                <td><a href="~/KPanel/AdmNeYapiyoruzGetr/@x.id" class="button border with-icon">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/KPanel/AdmNeYapiyoruzEkle/" class="button border with-icon">Yeni Hizmet Ekle</a>

</div>

