@using MobilyaProje.Models
@model List<Referans>
@{
    ViewBag.Title = "AdmReferans";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="width:100%" ; class="col-md-12 table table-hover">
    <h3>Referanslar</h3>
    <table class="table table-bordered">
        <tr>
            <th>Resim</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td><img src="@x.Resim" style="width:110px;" /></td>
           
                <td><a href="~/KPanel/AdmRefSil/@x.id" onclick="return confirm('Bunu Silmek İstediginizden Emin misin?  @x.Resim ')" class="button border with-icon" style="background-color:#ff0000; color:#fff">Sil</a></td>
                <td><a href="~/KPanel/AdmRefGetr/@x.id" class="button border with-icon">Düzenle</a></td>
            </tr>
        }
    </table>
    <a href="/KPanel/AdmRefEkle/" class="button border with-icon">Yeni Referans Ekle</a>

</div>

