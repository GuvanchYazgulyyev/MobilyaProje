@using MobilyaProje.Models
@model List<Galeri>
@{
    ViewBag.Title = "AdmGaleriResim";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="width:100%" ; class="col-md-12 table table-hover">
    <h3>Galeri İçerkleri</h3>
    <table class="table table-bordered">
        <tr>
            <th>Başlıgı</th>
            @*<th>Resim</th>*@
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                @*<td>@x.GetGaleriicerik.Baslik</td>*@

                <td><img src="@x.Resim" width="100px;" alt="Alternate Text" /></td>
          
                <td><a href="/KPanel/AdmGaleriResimSil/@x.id" class="button border with-icon"  style="background-color:#ff0000; color:#fff">Sil</a></td>
                <td><a href="/KPanel/AdmGaleriResimGetir/@x.id" class="button border with-icon">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/KPanel/AdmGaleriResimEkle/" class="button border with-icon">Yeni İçerik Ekle</a>

</div>

