@using MobilyaProje.Models
@model List<Admin> 
@{
    ViewBag.Title = "Adminkullanici";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div style="width:100%" ; class="col-md-12 table table-hover">
    <h3>Kullancılar</h3>
    <table class="table table-bordered">
        <tr>
            <th>Ad Soyad</th>
            <th>Kullanıcı Adı</th>      
            <th>Şifre</th>      
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.AdSoyad</td>
                <td>@x.Kullanici</td>     
                <td>@x.Sifre</td>
                @*<td>@x.AdminYetki.YetkiAd</td>*@
                <td><a href="~/KPanel/AdminKulSil/@x.id" onclick="return confirm('Bunu Silmek İstediginizden Emin misin? @x.AdSoyad ')" class="button border with-icon" style="background-color:#ff0000; color:#fff">Sil</a></td>
                <td><a href="~/KPanel/AdminKulGetr/@x.id" class="button border with-icon">Güncelle</a></td>
            </tr>
        }
    </table>
    <a href="/KPanel/AdminKulEkle/" class="button border with-icon">Yeni Kullanıcı Ekle</a>

</div>

